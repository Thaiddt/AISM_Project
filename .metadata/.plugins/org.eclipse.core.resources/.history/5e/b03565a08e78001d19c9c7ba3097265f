package hust.soict.dsai.aims;

import java.util.ArrayList;
//import java.util.Collections;
import java.util.List;

import hust.soict.dsai.aims.book.Book;
import hust.soict.dsai.aims.cd.CompactDisc;
import hust.soict.dsai.aims.media.Media;

public class Aims {
	public static void main(String[] args) {
		List<Media> listmedia = new ArrayList<Media>();
		listmedia.add(new CompactDisc("Hugo", "Action", 3.5f));
		listmedia.add(new CompactDisc("Avatar", "Action", 2.4f));
//		Options.RunApp(listmedia);
		Book book1 = new Book("Nothing", "Babe", 3.2f);
		CompactDisc cd1 = new CompactDisc("Starwar", "Action", "Babe", "Never", 3, 3.5f);
		listmedia.add(cd1);
		listmedia.add(book1);
		Options.RunApp(listmedia);
	}
}

class Menu {
	public static void showMenu() {
		System.out.println("AIMS: ");
		System.out.println("------------------------------");
		System.out.println("1. View store");
		System.out.println("2. Update store");
		System.out.println("3. See current cart");
		System.out.println("0. Exit");
		System.out.println("------------------------------");
		System.out.println("Please choose a number (0-1-2-3): ");
	}
	
	public static void storeMenu() {
		System.out.println("Options: ");
		System.out.println("------------------------------");
		System.out.println("1. See a media's details");
		System.out.println("2. Add a medua to cart");
		System.out.println("3. Play a media");
		System.out.println("4. See current cart");
		System.out.println("0. Back");
		System.out.println("-------------------------------");
		System.out.println("Please choose a number (0-1-2-3-4): ");
	}
}